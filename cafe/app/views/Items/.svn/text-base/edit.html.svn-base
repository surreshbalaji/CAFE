#{extends 'main.html' /}
#{set title:'Home' /}


#{form @Items.edit(item.id)}
    <p>
        <label for="name">Name: </label>
        <input type="text" name="item.name" id="item.name" value="${item.name}"/>
    </p>
    <p>
        <label for="description">Description: </label>
        <textarea name="item.description" id="item.description">${item.description}</textarea>
    </p>
    <p>
        <input type="submit" value="Save" />
    </p>
#{/form}


